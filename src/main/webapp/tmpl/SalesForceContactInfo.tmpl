<script id="tmpl-SalesForceContactInfo" type="text/html">
	<div class="SalesForceContactInfo modal">
		<div class="SalesForceContactInfo-header modal-header">
			<div class="close btnClose"><i class="icon-remove"></i></div>
			<h3>{{#if Id}}Update{{else}}Create{{/if}} Contact</h3>
		</div>
		<div class="SalesForceContactInfo-content modal-body">
			<div class="form-horizontal">
				<div class="control-group">
					<div class="control-label">Contact name:</div>
					<div class="controls">
						<input type='text' name="name" value="{{Name}}" />
					</div>
				</div>
			</div>
		</div>
		<div class="SalesForceContactInfo-footer modal-footer">
			<div class="btn btn-primary btnCreate">Save</div>
			<div class="btn btnClose">Close</div>
		</div>
	</div>  
</script>